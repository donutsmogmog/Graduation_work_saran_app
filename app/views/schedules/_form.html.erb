<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div class="mb-4 text-red-600">
      <ul>
        <% schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold" %>
    <%= form.text_area :description, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :artist_id, "Artist", class: "block text-gray-700 font-semibold" %>
    <%= form.select :artist_id, Artist.all.collect { |c| [c.name, c.id] }, {}, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, "Category", class: "block text-gray-700 font-semibold" %>
    <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] }, {}, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :start_time, class: "block text-gray-700 font-semibold" %>
    <%= form.datetime_field :start_time, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :end_time, class: "block text-gray-700 font-semibold" %>
    <%= form.datetime_field :end_time, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4 flex items-center">
    <%= form.check_box :show_remaining_time, class: "mr-2" %>
    <%= form.label :show_remaining_time, class: "text-gray-700 font-semibold" %>
  </div>

  <div>
    <%= form.submit class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>
<div class="flex flex-col items-center">
<br>