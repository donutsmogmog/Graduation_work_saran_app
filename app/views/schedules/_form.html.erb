<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-600 rounded-lg">
      <ul class="list-disc pl-5">
        <% schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4">
    <%= form.label :artist_id, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.select :artist_id, Artist.all.collect { |c| [c.name, c.id] }, {}, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] }, {}, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4">
    <%= form.label :start_time, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.datetime_field :start_time, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4">
    <%= form.label :end_time, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.datetime_field :end_time, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
  </div>

  <div class="mb-4 flex items-center">
    <%= form.check_box :show_remaining_time, class: "mr-2" %>
    <%= form.label :show_remaining_time, class: "text-gray-700 font-semibold" %>
  </div>

  <div>
    <%= form.submit class: "py-2 px-4 bg-primary text-white font-semibold rounded-md hover:bg-primary-dark w-full" %>
  </div>
<% end %>
<div class="flex flex-col items-center">
<br>