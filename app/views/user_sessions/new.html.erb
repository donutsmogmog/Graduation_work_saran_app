<div class="w-full max-w-lg p-8 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-semibold mb-6 text-center"><%= t(".title") %></h1>

  <% if flash[:alert] %>
    <div class="mb-4 p-4 bg-red-100 text-red-600 rounded-lg">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= form_with url: login_path do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
    </div>
    <div class="text-center">
      <%= f.submit t("helpers.submit.login"), class: "py-2 px-4 bg-primary text-white font-semibold rounded-md hover:bg-primary-dark w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-6">
    <%= link_to t(".to_register_page"), new_user_path, class: "text-primary hover:underline mr-4" %>
  </div>
</div>
