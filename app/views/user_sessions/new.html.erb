<div class="flex justify-center">
  <div class="w-full max-w-lg">
    <h1 class="text-2xl font-semibold mb-6"><%= t(".title") %></h1>
    
    <%= form_with url: login_path do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent" %>
      </div>
      <%= f.submit t(".login"), class: "w-full py-2 px-4 text-primary hover:text-secondary transition-colors" %>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to t(".to_register_page"), new_user_path, class: "text-primary hover:underline mr-4" %>
      <%= link_to t(".password_forget"), "#", class: "text-primary hover:underline" %>
    </div>
  </div>
</div>
