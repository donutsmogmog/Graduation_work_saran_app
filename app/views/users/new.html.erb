<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded">
  <h1 class="text-2xl font-semibold text-center mb-6"><%= t("users.new.title") %></h1>
  <%= form_with model: @user do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="text-center">
      <%= f.submit t("helpers.submit.create"), class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition-colors" %>
    </div>
  <% end %>
  <div class="text-center mt-4">
    <%= link_to t(".to_root_page"), root_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
